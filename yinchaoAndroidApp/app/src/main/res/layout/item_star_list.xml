<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:placeholderImage="@drawable/default_pic"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/main_text_color2"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_tag_bg"
                android:paddingBottom="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:text="全能"
                android:textColor="@color/white2"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_tag_bg"
                android:paddingBottom="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:text="作曲达人"
                android:textColor="@color/white2"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_tag_bg"
                android:paddingBottom="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:text="作词达人"
                android:textColor="@color/white2"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spit_line_height"
        android:layout_marginLeft="10dp"
        android:background="@color/split_line"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>