<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/preservation_margin"
        android:text="支付信息"
        android:textSize="16sp"
        android:textColor="@color/main_text_color3"
        android:gravity="left|center_vertical"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/preservation_margin"
        android:layout_marginRight="@dimen/preservation_margin"
        android:src="@color/main_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/preservation_margin"
        android:layout_marginRight="@dimen/preservation_margin"
        android:layout_marginBottom="@dimen/preservation_margin"
        >

        <TextView
            android:id="@+id/price_mask"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:text="总价:"
            android:textSize="16sp"
            android:textColor="@color/main_text_color"
            />
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/price_mask"
            android:text="￥2.00"
            android:textSize="16sp"
            android:textColor="@color/red"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/price_mask"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wechat_logo"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="centerInside"
                android:src="@drawable/wechat_logo"/>

            <TextView
                android:id="@+id/wechat_mask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="微信支付"
                android:textSize="16sp"
                android:textColor="@color/main_text_color"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/wechat_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_checked"
                />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>