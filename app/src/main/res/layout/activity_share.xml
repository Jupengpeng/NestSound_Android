<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_share"
    android:orientation="vertical">
    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="25dp" />
    <include layout="@layout/view_toolbar_playaudio" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_top1" />

        <ImageView
            android:id="@+id/iv_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_success"
            android:src="@drawable/ic_share_top2" />

        <TextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/iv_top1"
            android:text="恭喜您，发布成功！"
            android:textColor="@color/main_text_color"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="赶紧分享给朋友看看吧"
        android:textColor="@color/main_text_color"
        android:textSize="16.5sp" />

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">


        <TextView
            android:id="@+id/tv_weixin"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/ic_share_wx"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/main_text_color" />


        <TextView
            android:id="@+id/tv_friend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/ic_share_wx_friend"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/main_text_color" />


        <TextView
            android:id="@+id/tv_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/ic_share_wb"
            android:gravity="center"
            android:text="微博"
            android:textColor="@color/main_text_color" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_qq"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/ic_share_qq"
            android:gravity="center"
            android:text="QQ"
            android:textColor="@color/main_text_color" />


        <TextView
            android:id="@+id/tv_qzone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/ic_share_qzone"
            android:gravity="center"
            android:text="QQ空间"
            android:textColor="@color/main_text_color" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/ic_share_wb"
            android:gravity="center"
            android:text="微博"
            android:visibility="invisible"
            android:textColor="@color/main_text_color" />


    </LinearLayout>

</LinearLayout>