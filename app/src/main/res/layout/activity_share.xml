<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_share"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_playaudio" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_top1" />

        <ImageView
            android:id="@+id/iv_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_success"
            android:src="@drawable/ic_share_top2" />

        <TextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/iv_top1"
            android:text="恭喜您，发布成功！"
            android:textColor="@color/main_text_color"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="赶紧分享给朋友看看吧"
        android:textColor="@color/main_text_color2"
        android:textSize="16.5sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp">


        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_share_wx"
            android:gravity="center"
            android:paddingBottom="@dimen/share_icon_padding"
            android:paddingTop="@dimen/share_icon_padding"
            android:text="微信"
            android:textColor="@color/main_text_color" />


        <TextView
            android:id="@+id/tv_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_share_wx_friend"
            android:gravity="center"
            android:paddingBottom="@dimen/share_icon_padding"
            android:paddingTop="@dimen/share_icon_padding"
            android:text="朋友圈"
            android:textColor="@color/main_text_color" />


        <TextView
            android:id="@+id/tv_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_share_wb"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="微博"
            android:textColor="@color/main_text_color" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">


        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_share_qq"
            android:gravity="center"
            android:paddingBottom="@dimen/share_icon_padding"
            android:paddingTop="@dimen/share_icon_padding"
            android:text="QQ"
            android:textColor="@color/main_text_color" />


        <TextView
            android:id="@+id/tv_qzone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_share_qzone"
            android:gravity="center"
            android:paddingBottom="@dimen/share_icon_padding"
            android:paddingTop="@dimen/share_icon_padding"
            android:text="QQ空间"
            android:textColor="@color/main_text_color" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_share_wb"
            android:gravity="center"
            android:paddingBottom="@dimen/share_icon_padding"
            android:paddingTop="@dimen/share_icon_padding"
            android:text="微博"
            android:textColor="@color/main_text_color"
            android:visibility="invisible" />

    </LinearLayout>

    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.4dp"-->
    <!--android:layout_marginTop="40dp"-->
    <!--android:layout_marginBottom="0dp"-->
    <!--android:layout_marginLeft="40dp"-->
    <!--android:layout_marginRight="40dp"-->
    <!--android:src="@color/white"-->
    <!--android:id="@+id/imageView" />-->
    <LinearLayout
        android:id="@+id/baoquanlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="*为了你的个人权益，推荐你进行保全等级"
            android:textColor="@color/main_text_color"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/share_submit"
            style="@style/SubmitButton.Share"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_share_preserve"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="保全登记"
                android:textColor="@color/main_text_color"
                android:textSize="16sp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>