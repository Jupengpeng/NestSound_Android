<com.xilu.wybz.view.KeyboardListenLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/yc_15"
        android:src="@drawable/ic_login_cancle" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:src="@drawable/ic_login_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/yc_15"
                    android:src="@drawable/ic_mphone" />


                <EditText
                    android:id="@+id/mlogin_user"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="手机号"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/yc_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spit_line_height"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/main_text_color3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/yc_15"
                    android:src="@drawable/ic_mphopas" />

                <EditText
                    android:id="@+id/mlogin_pass"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textSize="@dimen/yc_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spit_line_height"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/main_text_color3" />

            <TextView
                android:id="@+id/mlogin_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:text="忘记密码？"
                android:textColor="#c1c1c1"
                android:textSize="@dimen/yc_12" />

            <TextView
                android:id="@+id/mlogin_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:alpha="0.8"
                android:background="@drawable/corner_login"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="登录"
                android:textColor="#333"
                android:textSize="@dimen/yc_15" />


            <TextView
                android:id="@+id/mlogin_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="没有账号？点击注册"
                android:textColor="#fff"
                android:textSize="@dimen/yc_12" />

        </LinearLayout>
    </ScrollView>
</com.xilu.wybz.view.KeyboardListenLayout>
