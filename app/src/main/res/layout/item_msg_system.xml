<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_theme"
        android:layout_marginTop="@dimen/margin_theme"
        android:layout_marginBottom="@dimen/margin_theme"
        android:src="#aaaaaa"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/margin_theme"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_type"
        android:text="dsfsssssssssssssssaaaaaaaaaa"
        android:textColor="@color/main_text_color"
        android:minLines="2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/margin_theme"
        android:layout_below="@+id/tv_content"
        android:layout_alignParentRight="true"
        android:text="20016/02/45 12:00"
        android:textColor="@color/main_text_color"
        android:textSize="10sp" />

    <include layout="@layout/view_spit_line" />

</RelativeLayout>