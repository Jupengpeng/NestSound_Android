<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/yc_10"
    android:paddingLeft="@dimen/yc_15"
    android:paddingRight="@dimen/yc_15"
    android:paddingTop="@dimen/yc_10"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_head"
            android:layout_width="42dp"
            android:layout_height="42dp"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/ic_default_head_252"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:failureImage="@drawable/ic_default_head_252"
            fresco:failureImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/yc_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="username"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/yc_15" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yc_2"
                android:gravity="right"
                android:text="time"
                android:textColor="@color/main_text_color2"
                android:textSize="@dimen/yc_12" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/yc_5"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="赞了你的作品"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/yc_15" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="@dimen/yc_8"
        android:background="@drawable/link_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_cover"
            android:layout_width="68dp"
            android:layout_height="68dp"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/ic_default_pic"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:failureImage="@drawable/ic_default_pic"
            fresco:failureImageScaleType="centerCrop"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yc_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="music_name"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/yc_15" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yc_6"
                android:text="author"
                android:textColor="@color/main_text_color2"
                android:textSize="13dp" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>