<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        >
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="50dp"
        android:layout_height="50dp"
        fresco:fadeDuration="300"
        fresco:actualImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        fresco:placeholderImage="@drawable/default_pic"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/app_name"
        android:layout_marginLeft="20dp"
        android:textColor="@color/main_text_color2"
        />
        <TextView
            android:id="@+id/tv_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white2"
            android:text="全能"
            android:layout_marginRight="5dp"
            android:textSize="8sp"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="5dp"
            android:background="@drawable/ic_tag_bg"
            />
        <TextView
            android:id="@+id/tv_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white2"
            android:text="作曲达人"
            android:layout_marginRight="5dp"
            android:textSize="8sp"
            android:paddingLeft="8dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="2dp"
            android:background="@drawable/ic_tag_bg"
            />
        <TextView
            android:id="@+id/tv_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white2"
            android:text="作词达人"
            android:layout_marginRight="5dp"
            android:textSize="8sp"
            android:paddingLeft="8dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="2dp"
            android:background="@drawable/ic_tag_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_split_line"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="@dimen/spit_line_height"
        android:background="@color/split_line"
        android:orientation="horizontal">
    </LinearLayout>

</LinearLayout>