<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/split_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/yc_15"
        android:layout_marginRight="@dimen/yc_15"
        android:layout_marginTop="@dimen/yc_15"
        android:layout_marginBottom="@dimen/yc_15"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/normal_play_control"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            tools:text="00:00"
            android:textColor="@color/main_text_color3"
            android:textSize="10dp" />

        <SeekBar
            android:id="@+id/playSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            tools:progress="14"
            android:progressDrawable="@drawable/seekbar_progress_selecter"
            android:thumb="@drawable/seekbar_control_selector"
            android:thumbOffset="0dip" />

        <TextView
            android:id="@+id/tv_alltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:01"
            android:textColor="@color/main_text_color3"
            android:textSize="10dp" />
    </LinearLayout>


</LinearLayout>