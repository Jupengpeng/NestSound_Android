<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/yc_56"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yc_15"
            android:layout_marginTop="@dimen/yc_5"
            android:text="贝加尔湖畔的泥"
            android:textSize="15sp"
            android:textColor="@color/main_title_color"
            />

        <ImageView
            android:id="@+id/iv_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tv_title"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_toRightOf="@+id/tv_title"
            android:scaleType="center"
            android:src="@drawable/ic_warn" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:background="@drawable/type_blue"
            android:text="歌词"
            android:textSize="12sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_type"
            android:layout_alignTop="@+id/tv_type"
            android:layout_alignBottom="@+id/tv_type"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="2016-02-09"
            android:textSize="12sp"
            android:textColor="@color/main_text_color2"

            />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="56dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ok_btn2"
            android:gravity="center"
            android:text="发送"
            android:textSize="12sp"
            android:textColor="@color/main_text_color"
            />


    </RelativeLayout>

    <!--<include layout="@layout/view_spit_line"/>-->

</RelativeLayout>