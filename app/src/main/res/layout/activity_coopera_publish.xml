<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coopera_publish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.xilu.wybz.ui.cooperation.CooperaPublish">

    <include layout="@layout/view_toolbar" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="start"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:maxLength="150"
        android:hint="简单说一下你的合作愿望吧"
        android:textColor="#c1c1c1"
        android:textSize="14sp"
        android:background="#ffffff"
        android:id="@+id/editText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#40CBCBCB" />

    <RelativeLayout
        android:id="@+id/chooselyric_iv"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="选择参加合作的歌词作品"
            android:textColor="#c1c1c1"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="#40CBCBCB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="说明"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginTop="13dp"
            android:text="· 默认合作期限为15天，您可以在所有合作作品中选取一首作为采纳作品，如超期或期限内没有满意作品，则视为合作结束"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginTop="13dp"
            android:text="· 删除合作需求，他人将无法进行合作，但已合作完成作品不会被删除"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginTop="13dp"
            android:text="· 您的歌词作品在发起合作后，将无法修改"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
