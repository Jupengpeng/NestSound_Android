<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/preservation_margin"
        android:gravity="left|center_vertical"
        android:text="保全人信息" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/preservation_margin"
        android:layout_marginRight="@dimen/preservation_margin"
        android:orientation="horizontal">

        <TableRow>
            <TextView
                android:layout_gravity="center_vertical"
                android:text="姓名"
                android:layout_width="60dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@color/main_text_color"
                />
            <EditText
                android:id="@+id/preservation_name"
                android:layout_width="300dp"
                android:hint="请输入姓名"
                android:textColorHint="@color/main_text_color3"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/main_text_color2"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_gravity="center_vertical"
                android:text="身份证"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@color/main_text_color"
                />
            <EditText
                android:id="@+id/preservation_card"
                android:hint="请输入身份证号码"
                android:textColorHint="@color/main_text_color3"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/main_text_color"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_gravity="center_vertical"
                android:text="手机号"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@color/main_text_color"
                />
            <EditText
                android:id="@+id/preservation_phone"
                android:hint="请输入手机号码"
                android:textColorHint="@color/main_text_color3"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/main_text_color"
                />

        </TableRow>
    </TableLayout>

</LinearLayout>