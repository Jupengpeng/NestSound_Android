<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/collect_headerurl_iv"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_song_effect_caojiang" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/collect_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今妃昔比"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/collect_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="2016.08.12 20:34"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/collect_tv_participatenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="23人参与合作"
            android:textColor="#999999"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
       >

        <TextView
            android:id="@+id/collect_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="《从你的全世界路过》"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/collect_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="对方停止该合作"
            android:textColor="#ffb705"
            android:textSize="12sp" />
        <View
            android:layout_alignParentBottom="true"
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spit_line_height"
            android:background="@color/split_line" />

    </RelativeLayout>


</LinearLayout>
