<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/yc_10"
    android:paddingLeft="@dimen/yc_15"
    android:paddingRight="@dimen/yc_15"
    android:paddingTop="@dimen/yc_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_head"
            android:layout_width="42dp"
            android:layout_height="42dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:failureImage="@drawable/ic_default_head_252"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/ic_default_head_252"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yc_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="用户"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/yc_15" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yc_2"
                android:gravity="right"
                android:text="time"
                android:textColor="@color/main_text_color2"
                android:textSize="@dimen/yc_12" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:background="@drawable/ok_btn2"
            android:gravity="center"
            android:text="回复"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/yc_12" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/yc_8"
        android:text="回复某某某:"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/yc_15" />

    <TextView
        android:id="@+id/tv_parent_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/yc_8"
        android:text="parentcomment"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/yc_15" />

    <LinearLayout
        android:id="@+id/ll_music"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="@dimen/yc_10"
        android:padding="5dp"
        android:background="@drawable/link_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_cover"
            android:layout_width="58dp"
            android:layout_height="58dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:failureImage="@drawable/ic_default_pic"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/ic_default_pic"
            fresco:placeholderImageScaleType="centerCrop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yc_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="songname"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/yc_15" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yc_3"
                android:text="author"
                android:textColor="@color/main_text_color2"
                android:textSize="@dimen/yc_12" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>