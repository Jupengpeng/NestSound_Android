<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"

    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_wel"
        android:scaleType="centerCrop"
        tools:visibility="visible"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            tools:text="07"
            android:textColor="@color/main_text_color3"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/date_day"
            android:layout_alignTop="@+id/date_day"
            android:layout_alignBottom="@+id/date_day"
            android:layout_marginLeft="2dp"
            android:gravity="left|center_vertical"
            tools:text="六月\n2016"
            android:textColor="@color/main_text_color3"
            android:textSize="10sp"
            />
        <ImageView
            android:id="@+id/iv_frequency_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/date_day"
            android:layout_alignBottom="@+id/date_day"
            android:layout_toRightOf="@+id/date_time"
            android:layout_marginLeft="6dp"
            android:scaleType="center"
            android:src="@drawable/ic_user_frequency"
            />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            tools:text="立夏\n市文化馆五规划为一个号欧冠为欧冠"
            android:textSize="12sp"
            android:textColor="@color/grey1"
            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_frequency"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        tools:src="@drawable/user_frequency_white"
        tools:visibility="visible"
        android:visibility="gone"
        />

</android.support.v7.widget.CardView>