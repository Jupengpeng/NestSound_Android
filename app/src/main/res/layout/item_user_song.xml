<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"

    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="0dp"

    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/split_line"
        >


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:src="@drawable/chatting_pic_icon"
            />
        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_item_play"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            tools:text="master"
            android:textSize="18sp"
            android:textColor="@color/main_title_color"
            />
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_image"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="10dp"
            tools:text="this is text"
            android:textSize="16sp"
            android:textColor="@color/grey2"
            />


        <ImageView
            android:id="@+id/iv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_image"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_item_show"
            android:scaleType="fitCenter"
            />
        
        <TextView
            android:id="@+id/tv_show_num"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_show"
            android:layout_alignTop="@+id/iv_show"
            android:layout_alignBottom="@+id/iv_show"
            android:layout_marginLeft="5dp"
            android:includeFontPadding="false"
            tools:text="1234"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/main_text_color3"
            />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_show"
            android:layout_toRightOf="@+id/tv_show_num"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_item_fav"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/tv_like_num"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_like"
            android:layout_alignTop="@+id/iv_show"
            android:layout_alignBottom="@+id/iv_show"
            android:layout_marginLeft="5dp"
            tools:text="4567"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/main_text_color3"/>

        <ImageView
            android:id="@+id/iv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_show"
            android:layout_toRightOf="@+id/tv_like_num"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_item_zan"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/tv_zan_num"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_zan"
            android:layout_alignTop="@+id/iv_show"
            android:layout_alignBottom="@+id/iv_show"
            android:layout_marginLeft="5dp"
            tools:text="1.2ä¸‡"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/main_text_color3"/>





    </RelativeLayout>



</android.support.v7.widget.CardView>
