<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/chooselyric_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="从你的全世界路过"
        android:textColor="@color/main_text_color"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/chooselyric_iv_isprivate"
        android:layout_width="11dp"
        android:layout_height="14dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/chooselyric_tv_title"
        android:src="@drawable/icon_lock" />

    <TextView
        android:id="@+id/chooselyric_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="2016.10.21 20:09"
        android:textColor="@color/main_text_color3"
        android:textSize="12sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spit_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/split_line" />

</RelativeLayout>
