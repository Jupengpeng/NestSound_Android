<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewSpitLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:src">@color/split_line</item>
    </style>

    <style name="SubmitButton" parent="android:TextAppearance.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/button_submit_pay</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubmitButton.Delete">
        <item name="android:background">@drawable/button_submit_delete</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SubmitButton.Share">
        <item name="android:background">@drawable/button_submit_share</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

</resources>